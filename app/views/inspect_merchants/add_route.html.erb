<input id="merchant_id" type="" name="" value="<%= @object.merchant_id %>" class="hidden">
<input id="index" type="" name="" value="<%= routes_inspect_merchant_path(@object.id) %>" class="hidden">
<div class="body">

    <div id="add">
        <div class="form-group col-xs-12">
            <div class="col-xs-offset-3 col-xs-6">
                <%= text_area_tag 'req_body', JSON.pretty_generate(@hash), style: 'height: 180px;', class: 'form-control', disabled: 'disabled' %>
            </div>
        </div>
        <form action="" class="form-horizontal col-xs-offset-2" id="addform">
            <div class="form-group">
                <label for="" class="col-xs-3 control-label">渠道密钥</label>
                <div class="col-xs-4" id="channel-key">
                    <input type="text" class="form-control input-sm" name="channel-key">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-xs-3 control-label">渠道名称</label>
                <div class="col-xs-2">
                    <select name="" class="form-control input-sm " id="channel-name">
                            <option class ="paytype" value="SWIFT">威富通</option>
                            <option class ="paytype" value="BJRCB">北京农商行</option>
                            <option class ="paytype" value="CITIC_ALI">中信直连支付宝</option>
                            <option class ="paytype" value="CITIC_WECHAT">中信直连微信</option>
                            <option class ="paytype" value="DIANZI">点子</option>
                            <option class ="paytype" value="TFB">天付宝</option>
                            <option class ="paytype" value="SOFTBANKC">大连软银</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-xs-3 control-label">渠道商户号</label>
                <div class="col-xs-4" id="channel-mch-id">
                    <input type="text" class="form-control input-sm">
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-xs-3 control-label">路由状态</label>
                <div class="col-xs-2">
                    <select name="" class="form-control input-sm" id="priority">
                        <option value="1">开启</option>
                        <option value="0">关闭</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-xs-3 control-label">渠道类型</label>
                <div class="col-xs-2">
                    <select name="" class="form-control input-sm channel-mch-id" id="channel-type">
                        <option value="1">T1</option>
                        <option value="0">D0</option>
                    </select>
                </div>
            </div>
            <label for="" class="col-xs-3 control-label">支付方式</label>
            <div class="col-xs-3 pay-type" id="pay-type">
                <label class="checkbox-inline ">
                   <input type="checkbox" value="wechat.scan" name="pay" checked="checked" class="SWIFT BJRCB CITIC_WECHAT"> wechat.scan
                </label>
                <label class="checkbox-inline ">
                    <input type="checkbox" value="alipay.scan" name="pay" checked="checked" class="SWIFT BJRCB CITIC_ALI"> alipay.scan
                 </label>
                <label class="checkbox-inline">
                      <input type="checkbox"value="qq.scan" name="pay" checked="checked" class="SWIFT"> qq.scan
                </label>
                <br/>
                <label class="checkbox-inline">
                      <input type="checkbox" value="wechat.jsapi" name="pay" checked="checked" class="SWIFT CITIC_WECHAT"> wechat.jsapi
                </label>
                <label class="checkbox-inline">
                      <input type="checkbox"  value="alipay.jsapi" name="pay" checked="checked" class="SWIFT CITIC_ALI"> alipay.jsapi
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" value="qq.jsapi" name="pay" checked="checked" class="SWIFT"> qq.jsapi
                </label>
                <br/>
                <label class="checkbox-inline">
                    <input type="checkbox"  value="wechat.micro" name="pay" checked="checked" class="SWIFT BJRCB CITIC_WECHAT"> wechat.micro
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" value="alipay.micro" name="pay" checked="checked"  class="SWIFT BJRCB CITIC_ALI"> alipay.micro
                </label>
                <label class="checkbox-inline">
                    <input type="checkbox" value="qq.micro" name="pay" checked="checked" class="SWIFT"> qq.micro
                </label>
                <br/>
                <label class="checkbox-inline">
                     <input type="checkbox" value="wechat.jsurl" name="pay" class="BJRCB"> wechat.jsurl
                 </label>
            </div>

            <div class="hide" id="city">
                <h3 class="title"></h3>
                <div class="form-group">
                    <label for="" class="col-xs-3 control-label" value="">服务商appid</label>
                    <div class="col-xs-4" id="CITIC_appid">
                        <input type="text" class="form-control input-sm">
                    </div>
                </div>
                <div class="hide" id="cityWeChat">
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label" value="">服务商秘钥</label>
                        <div class="col-xs-4" id="CITIC_wekey">
                            <input type="text" class="form-control input-sm">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label" value="">服务商商户号</label>
                        <div class="col-xs-4" id="CITIC_wenum">
                            <input type="text" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div id="cityali" class="hide">
                    <div class="form-group">
                        <label for="" class="col-xs-3 control-label" value="">支付宝token</label>
                        <div class="col-xs-4" id="CITIC_ali">
                            <input type="text" class="form-control input-sm">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center">
                    <a class="btn btn-primary btn-lg addbtn"> 添 加 </a>
                    <%= link_to '返回', routes_inspect_merchant_path(@object.id), class: 'btn btn-default btn-lg'%>
                </div>
            </div>
        </form>
    </div>
</div>

