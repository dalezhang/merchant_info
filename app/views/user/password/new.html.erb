 
<div class="login-box-body">
  <p class="login-box-msg">找回密码</p>

<%= form_for(:user, url: send_reset_email_user_password_index_path, html: { method: :post }) do |f| %>
    <div class="form-group has-feedback">
      <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Email" %>
    </div>
    <div class="row">
      <!-- /.col -->
      <div class="col-xs-12">
        <%= f.submit "发送重置密码邮件", class: "btn btn-primary btn-block btn-flat" %>
      </div>
      <!-- /.col -->
    </div>
  <% end %>
  <!-- /.social-auth-links -->
  <%= render "user/shared/links" %>
</div>
