<!DOCTYPE html>
<html>
  <head>
    <title>商户信息管理</title>
    <%= csrf_meta_tags %>
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/ionicons/2.0.1/css/ionicons.min.css">
  	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  	<!--[if lt IE 9]>
  	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  	<![endif]-->

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
  </head>
	<!--
	BODY TAG OPTIONS:
	=================
	Apply one or more of the following classes to get the
	desired effect
	|---------------------------------------------------------|
	| SKINS         | skin-blue                               |
	|               | skin-black                              |
	|               | skin-purple                             |
	|               | skin-yellow                             |
	|               | skin-red                                |
	|               | skin-green                              |
	|---------------------------------------------------------|
	|LAYOUT OPTIONS | fixed                                   |
	|               | layout-boxed                            |
	|               | layout-top-nav                          |
	|               | sidebar-collapse                        |
	|               | sidebar-mini                            |
	|---------------------------------------------------------|
	-->
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <%= render :partial => "/layouts/header" %>
      <%= render :partial => "/layouts/sidebar" %>
  		<!-- Content Wrapper. Contains page content -->
  		<div class="content-wrapper">
  		  <!-- Content Header (Page header) -->
  		  <section class="content-header">
  		    <h1>
            <%= controller_name.titlecase %>
  		      <small><%= action_name.titlecase %></small>
  		    </h1>
  		    <ol class="breadcrumb">
            <li><a href="<%= url_for(action: 'index') rescue '###' %>"><i class="fa fa-dashboard"></i><%= controller_name.titlecase %></a></li>
            <li class="active"><%= action_name.titlecase %></li>
  		    </ol>
  		  </section>

  		  <!-- Main content -->
  		  <section class="content">
          <%= render :partial => "/shared/flash" %>
  		    <!-- Your Page Content Here -->
					<%= yield %>
  		  </section>
  		  <!-- /.content -->
  		</div>
  		<!-- /.content-wrapper -->
      <%= render :partial => "/layouts/footer" %>
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
		<!-- ./wrapper -->
		<!-- REQUIRED JS SCRIPTS -->
		<!-- AdminLTE App -->
    <!-- file_upload -->
    <%#<script src="/plugins/file_upload/js/vendor/jquery.ui.widget.js"></script>%>
    <%#<script src="/plugins/file_upload/js/jquery.iframe-transport.js"></script>%>
    <%#<script src="/plugins/file_upload/js/jquery.fileupload.js"></script>%>
    <%#<script src="/plugins/file_upload/my_fileuploader.js"></script>%>
  </body>
</html>
